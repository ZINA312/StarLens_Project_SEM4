<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarLens.UI.Pages.FeedPage"
             Title="FeedPage"
             xmlns:models ="clr-namespace:StarLens.UI.ViewModels"
             x:DataType="models:FeedViewModel"
             NavigationPage.HasNavigationBar="False">
    <Grid VerticalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition Height="9.4*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Feed" Background="LightGray"  CornerRadius="0"/>
            <Button Grid.Column="1" Text="Search" CornerRadius="0" Command="{Binding SearchButtonClickedCommand}"/>
            <Button Grid.Column="2" Text="User" Command ="{Binding UserButtonClickedCommand}" CornerRadius="0" />
        </Grid>
    </Grid>
</ContentPage>