            <Button Grid.Column="1" Text="ðŸ’¬" FontSize="20"  Background="LightGray" CornerRadius="0"/>
            <Button Grid.Column="2" Text="+" FontSize="25" Command="{Binding AddPublicationButtonClickedCommand}" CornerRadius="0"/>
            <Button Grid.Column="3" Text="âŒ•" FontSize="27" Command="{Binding SearchButtonClickedCommand}"  CornerRadius="0" />
            <Button Grid.Column="4" Text="ðŸ‘¤"  FontSize="20" Command ="{Binding UserButtonClickedCommand}" CornerRadius="0" />
        </Grid>
    </Grid>
</ContentPage>